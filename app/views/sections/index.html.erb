<div class="col-md-12">
	<div class="row">
	    <div class="col-md-12">
	        <h2>All Sections</h2>
	    </div>
	</div>
	<div class="row">
	    <div class="col-md-12">
	        <div class="row">
	            <div class="col-md-9">
	                <h4>Title:</h4>
	            </div>
	            <div class="col-md-3">
	                <h4>Info:</h4>
	            </div>
	        </div>
	    </div>
	</div>
	<% @sections.each do |f|%>
	    <div class="row">
	        <div class="col-md-12">
	            <div class="row">
	                <div class="col-md-9">
	                    <p><%= f.title %></p>
	                    <p><%= f.content.html_safe %></p>
	                </div>
	                <div class="col-md-3">
	                    <p><%= f.created_at %></p>
	                    <p><%= link_to "Edit", edit_section_path(f) %></p>
	                    <p><%= link_to "Delete", section_path(f), method: :delete, data: {:confirm => "are you sure?"} %></p>
	                </div>
	            </div>
	            <hr />
	        </div>
	    </div>
	<% end %>
	<div class="row">
	    <div class="col-md-12">
	        <%= link_to "Create new section", new_section_path(params[:format]) %>
	    </div>
    </div>
</div>